{
  "name": "@trustarc/trustarc-segment-wrapper",
  "version": "1.1.1",
  "description": "TrustArc wrapper for Segment",
  "main": "./dist/cjs/src/index.js",
  "module": "./dist/esm/src/index.js",
  "types": "./dist/types/src/index.d.ts",
  "scripts": {
    "test": "jest --watch",
    "test:coverage": "jest --coverage",
    "build": "npm run build:cjs && npm run build:esm && npm run build:umd && npm run build:standalone",
    "build:cjs": "tsc -p tsconfig.build.json --outDir ./dist/cjs --module commonjs",
    "build:esm": "tsc -p tsconfig.build.json --outDir ./dist/esm --module esnext",
    "build:umd": "webpack",
    "build:standalone": "webpack --config webpack.standalone.config.js",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "author": "TrustArc",
  "license": "Apache-2.0",
  "dependencies": {
    "@segment/analytics-consent-tools": "^2.0.1",
    "@segment/analytics-generic-utils": "^1.2.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.13",
    "@types/node": "^20.11.19",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.1",
    "typescript": "^5.6.2",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/trustarc/trustarc-segment-wrapper.git"
  },
  "keywords": [
    "trustarc",
    "segment",
    "consent",
    "analytics"
  ],
  "bugs": {
    "url": "https://github.com/trustarc/trustarc-segment-wrapper/issues"
  },
  "homepage": "https://github.com/trustarc/trustarc-segment-wrapper#readme"
}
